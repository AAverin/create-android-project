@@ -0,0 +1,30 @@
+apply plugin: 'maven-publish'
+
+apply from: '../gradle/buildsystem/config.gradle'
+
+group project.ext.libraryConfig.group
+version project.ext.libraryConfig.version
+
+afterEvaluate {
+    publishing {
+        repositories {
+            maven {
+                name = "GithubPackages"
+                url = uri("${libraryConfig.packageUrl}")
+                credentials {
+                    username = project.findProperty("gpr.user") ?: System.getenv("PACKAGE_REGISTRY_USERNAME")
+                    password = project.findProperty("gpr.key") ?: System.getenv("PACKAGE_REGISTRY_TOKEN")
+                }
+            }
+        }
+
+        publications {
+            aar(MavenPublication) {
+                groupId "${libraryConfig.groupId}"
+                artifactId "${libraryConfig.artifactId}"
+                version "${libraryConfig.version}"
+                from components["release"]
+            }
+        }
+    }
+}
